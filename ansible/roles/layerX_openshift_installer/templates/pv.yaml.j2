

apiVersion: v1
kind: PersistentVolume
metadata:
  name: {{ item }}
spec:
  capacity:
    storage: 5Gi
  accessModes:
  - ReadWriteMany
  - ReadWriteOnce
  - ReadOnlyMany
  nfs:
    path: {{ nfs_ose3_pv_path }}/{{ item }}
    server: {{ infrastructure_network_storage.host_prefix | ipaddr('address') }}
  persistentVolumeReclaimPolicy: Recycle
EOF
